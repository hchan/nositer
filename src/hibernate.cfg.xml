<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.c3p0.acquire_increment">5</property>
        <property name="hibernate.c3p0.checkout_timeout">1000</property>
        <property name="hibernate.c3p0.idleConnectionTestPeriod">300</property>
        <property name="hibernate.c3p0.idle_test_period">100</property>
        <property name="hibernate.c3p0.max_size">100</property>
        <property name="hibernate.c3p0.max_statements">100</property>
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.timeout">100</property>
        <property name="hibernate.connection.autocommit">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">abc123</property>
        <property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/nositer?blobSendChunkSize=1024000000&amp;max_allowed_packet=1024000000&amp;autoReconnect=true</property>
        <property name="hibernate.connection.username">nositer</property>
        <property name="hibernate.current_session_context_class">org.hibernate.context.ThreadLocalSessionContext</property>
        <property name="hibernate.dialect">com.nositer.hibernate.MyMySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <mapping class="com.nositer.hibernate.generated.domain.Postalcode" />
        <mapping class="com.nositer.hibernate.generated.domain.User" />
        <mapping class="com.nositer.hibernate.generated.domain.Zipcode" />
        <mapping class="com.nositer.hibernate.generated.domain.UserHasGroup" />
        <mapping class="com.nositer.hibernate.generated.domain.Group" />
    </session-factory>
</hibernate-configuration>
