<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<context-param>
		<!-- max size of the upload request -->
		<param-name>maxSize</param-name>
		<param-value>3145728</param-value>
	</context-param>
	<context-param>
		<!-- Useful in development mode to slow down the uploads in fast networks. 
			Put the number of milliseconds to sleep in each block received in the server. 
			false or 0, means don't use slow uploads -->
		<param-name>slowUploads</param-name>
		<param-value>200</param-value>
	</context-param>

	<!--Servlet Filter that handles site authorization. -->
	<filter>
		<filter-name>AuthorizationFilter</filter-name>
		<description>This Filter authorizes user access to application
			components based upon request URI.</description>
		<filter-class>com.nositer.webapp.AuthorizationFilter</filter-class>
		<init-param>
			<param-name>error_page</param-name>
			<param-value>/error.jsp</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>AccessLogFilter</filter-name>
		<description>This Filter is used for logging</description>
		<filter-class>com.nositer.webapp.AccessLogFilter</filter-class>
		<init-param>
			<param-name>error_page</param-name>
			<param-value>/error.jsp</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>



	<listener>
		<listener-class>com.nositer.webapp.HibernateListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.nositer.webapp.BootstrapListener</listener-class>
	</listener>


	<!-- Servlets -->
	<servlet>
		<servlet-name>GwtServiceResolver</servlet-name>
		<servlet-class>com.google.gwt.user.server.rpc.GwtServiceResolver</servlet-class>
	</servlet>	

	<servlet>
		<servlet-name>UploadServlet</servlet-name>
		<servlet-class>com.nositer.server.servlet.UploadServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CurrentUserAsJsonServlet</servlet-name>
		<servlet-class>com.nositer.server.servlet.CurrentUserAsJsonServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>imageServlet</servlet-name>
		<servlet-class>com.nositer.server.servlet.ImageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>imageServlet</servlet-name>
		<url-pattern>/userfile/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CurrentUserAsJsonServlet</servlet-name>
		<url-pattern>/currentuserasjson</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>UploadServlet</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GwtServiceResolver</servlet-name>
		<url-pattern>*.gwtrpc</url-pattern>
	</servlet-mapping>


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Nositer.html</welcome-file>
	</welcome-file-list>

</web-app>
